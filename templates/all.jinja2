{% extends 'base.jinja2' %}

{% block subtitle %}All the things{% endblock subtitle %}

{% block content %}
<ul>
    {% for task in tasks %}
        {% if task.performed %}
            <li>
                {{ task.name }} Done on {{ task.performed }} by {{ task.performed_by }}
            </li>
        {% else %}
            <li>
                {{ task.name }} Undone
            </li>
        {% endif %}
    {% endfor %}
</ul>
{% endblock content %}